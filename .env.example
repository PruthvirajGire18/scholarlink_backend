# Scholarship ingestion (comma-separated list, each can be `name|url|adapter`)
# Examples:
# SCHOLARSHIP_SOURCE_URLS=nsp|https://scholarships.gov.in/All-Scholarships|nsp_html,mahadbt|https://mahadbt.maharashtra.gov.in/|mahadbt_html
# SCHOLARSHIP_SOURCE_URLS=data/raw_scholarships.json|json
SCHOLARSHIP_SOURCE_URLS=nsp_all|https://scholarships.gov.in/All-Scholarships|nsp_html,nsp_dashboard|https://nsp.gov.in/dashboard/|nsp_html,mahadbt|https://mahadbt.maharashtra.gov.in/|mahadbt_html
INGEST_DEFAULT_STATUS=APPROVED
INGEST_AUTO_APPROVE_ALL=true
INGEST_MAX_SOURCES=10
INGEST_RUN_ON_BOOT=true
INGEST_SCHEDULER_ENABLED=true
INGEST_DAILY_HOUR_UTC=2
INGEST_DEFAULT_LINK_BASE_URL=
INGEST_ALLOW_PARTIAL_RECORDS=true
INGEST_FALLBACK_DEADLINE_DAYS=120
INGEST_FALLBACK_AMOUNT=10000
INGEST_MAX_CANDIDATES_PER_SOURCE=500
INGEST_DETAIL_FETCH_ENABLED=true
